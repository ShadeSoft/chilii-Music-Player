<audio id="song">
    Your browser does not support the audio element.
</audio>

<figure id="player" class="position-relative m-0">
    <div class="row half-gutters">
        <div class="col-9 d-flex">
            <div class="d-flex flex-grow-0">
                <img src="https://via.placeholder.com/64?text=cover" alt="" class="img-fluid">
            </div>
            <div class="d-flex align-items-center flex-grow-1">
                <div class="pl-2">
                    <span class="title">-</span><br>
                    <span>
                        <small class="artist">-</small> &ndash;
                        <small class="album">-</small>
                    </span>
                </div>
            </div>
        </div>
        <div class="col d-flex flex-grow-1 align-items-center justify-content-center">
            <section>
                <div class="d-flex align-items-center justify-content-center">
                    <button class="btn pt-1 pr-2 pb-1 pl-2 play-prev"><i class="fas fa-step-backward"></i></button>
                    <button class="btn pt-1 pr-2 pb-1 pl-2 toggle-play"><i class="fas fa-play"></i></button>
                    <button class="btn pt-1 pr-2 pb-1 pl-2 play-next"><i class="fas fa-step-forward"></i></button>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                    <button class="btn btn-sm pt-0 pr-2 pb-0 pl-2 toggle-shuffle"><i class="fas fa-random"></i></button>
                    <button class="btn btn-sm pt-0 pr-2 pb-0 pl-2 toggle-repeat position-relative">
                        <i class="fas fa-redo-alt"></i>
                        <small class="position-absolute font-weight-bold" style="bottom: 0;">1</small>
                    </button>
                    <button class="btn btn-sm pt-0 pr-2 pb-0 pl-2 volume"><i class="fas fa-volume-up"></i></button>
                    <button class="btn btn-sm pt-0 pr-2 pb-0 pl-2 toggle-mute"><i class="fas fa-volume-mute"></i></button>
                </div>
            </section>
        </div>
        <div class="col d-flex flex-grow-0">
            <button class="btn p-3 list-queue"><i class="fas fa-bars"></i></button>
        </div>
    </div>
    <div class="progress">
        <div class="progress-bar"></div>
        <small class="position-absolute progress-time"></small>
    </div>
    <aside class="position-absolute p-2 queue" style="display: none;"></aside>
</figure>