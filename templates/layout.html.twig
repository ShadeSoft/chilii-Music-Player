{% extends 'base.html.twig' %}

{% block title %}chilii Music Player{% endblock %}

{% block icons %}
    {% for size, icon in 'assets/icons/apple-icon-*.png'|glob %}
        <link rel="apple-touch-icon" sizes="{{ size }}" href="{{ asset(icon) }}">
    {% endfor %}

    <link rel="icon" type="image/png" sizes="192x192"  href="{{ asset('assets/icons/android-icon-192x192.png') }}">

    {% for size, icon in 'assets/icons/favicon-*.png'|glob %}
        <link rel="icon" type="image/png" sizes="{{ size }}" href="{{ asset(icon) }}">
    {% endfor %}

    <link rel="manifest" href="{{ asset('manifest.json') }}">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="{{ asset('assets/icons/ms-icon-144x144.png') }}">
    <meta name="theme-color" content="#ffffff">
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/vendor/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendor/@fortawesome/fontawesome-free/css/all.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/app.css'|versionify) }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/popper.js/dist/popper.min.js') }}"></script>
    <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('assets/js/app.js'|versionify) }}"></script>
{% endblock %}

{% block body %}
    <header>
        <div class="container-fluid">
            <div class="row">
                <div class="col-1 d-flex align-items-center">
                    {% spaceless %}
                        <h1 class="d-flex m-0">
                            <i class="fas fa-fire"></i>
                            <span class="fa-stack">
                                <i class="fas fa-play fa-stack-2x"></i>
                                <i class="fas fa-music fa-stack-1x fa-inverse" style="color: #efefef;"></i>
                            </span>
                        </h1>
                    {% endspaceless %}
                </div>
                <div class="col-sm-3 offset-sm-1 d-flex align-items-center">
                    {{ include('Component/filter-bar.html.twig') }}
                </div>
                <div class="col-sm-6 offset-sm-1">
                    {{ include('Component/player.html.twig') }}
                </div>
            </div>
        </div>
    </header>

    <main>
        <div class="container-fluid">
            <div class="row">
                <div class="col mt-3">
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
    </main>

    <footer>
        <div class="container-fluid text-center">
            Production &amp; Design by ShadeSoft
        </div>
    </footer>
{% endblock %}