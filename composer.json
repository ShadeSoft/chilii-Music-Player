{
    "name": "chilii-music-player",
    "description": "chilii Music Player",
    "type": "project",
    "license": ["GPL-3.0-only", "LGPL-3.0-only", "MPL-2.0"],
    "require": {
        "php": "^7.2",
        "ext-ctype": "*",
        "ext-fileinfo": "*",
        "ext-iconv": "*",
        "james-heinrich/getid3": "^1.9",
        "sensio/framework-extra-bundle": "^5.2",
        "shadesoft/twig-asset-version": "^1.0",
        "symfony/apache-pack": "^1.0",
        "symfony/asset": "*",
        "symfony/console": "*",
        "symfony/dotenv": "*",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "*",
        "symfony/monolog-bundle": "^3.3",
        "symfony/twig-bundle": "*",
        "symfony/yaml": "*"
    },
    "require-dev": {
        "symfony/profiler-pack": "^1.0",
        "symfony/var-dumper": "*"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "build": [
            "composer install -o --no-dev --apcu-autoloader",
            "npm i -f --only=prod --ignore-scripts --no-package-lock --no-audit",
            "ln -s ../../node_modules ./public/assets/vendor"
        ],
        "build-windows": [
            "composer install -o --no-dev --apcu-autoloader",
            "npm i -f --only=prod --ignore-scripts --no-package-lock --no-audit",
            "mklink /d .\\public\\assets\\vendor ..\\..\\node_modules"
        ],
        "build-dev": [
            "composer install",
            "npm i",
            "ln -s ../../node_modules ./public/assets/vendor",
            "gulp"
        ],
        "build-dev-windows": [
            "composer install",
            "npm i",
            "mklink /d .\\public\\assets\\vendor ..\\..\\node_modules",
            "gulp"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "4.1.*"
        }
    }
}
